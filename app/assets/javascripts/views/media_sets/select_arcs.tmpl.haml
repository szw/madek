.modal.hide.fade.ui-modal.wide{:role => "dialog", :tabindex => "-1"}
  %form
    .ui-modal-head
      %a.ui-modal-close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button", :title => "Close", :class => "weak"}
      %h3.title-l ${title}
    .ui-modal-body

      .ui-resources-table
        .pvh.mth
          .ui-preloader

    .ui-modal-footer
      .ui-actions
        %a.link.weak{"aria-hidden" => "true", "data-dismiss" => "modal", :class => "weak link"} ${_jed('Cancel')}
        %button.primary-button.disabled{:type => :submit, :disabled => :disabled} ${_jed('Save selection')}
