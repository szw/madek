!!! 5
%html#slideshow{:lang => "de-CH"}

  %head
    %meta{:charset => 'utf-8'}
    %title
      - if @app_settings.title
        - if @title
          = "#{@app_settings.title} - #{@title}"
        - else
          = "#{@app_settings.title}"
      - else
        - if @title
          = "Medienarchiv - #{@title}"
          // TODO INTERNATIONALIZE
          // TODO TABIFIZIERUNG
        - else
          = @app_settings.title || "Medienarchiv"
    = stylesheet_link_tag "slideshow"
    = javascript_include_tag "i18n/locale/#{I18n.locale.to_s.dasherize}"
    = javascript_include_tag "slideshow"
    = javascript_include_tag "test" if Rails.env.test?
    = javascript_tag ""
    = javascript_tag '$.fx.off = true;' if Rails.env.test?
    = render :partial => "application/javascript"
    = csrf_meta_tag
    = yield :head

  %body{data: {uberadmin: session[:act_as_uberadmin]}}
    = yield

