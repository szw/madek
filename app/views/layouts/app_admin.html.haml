!!!
%html

  %head
    %meta{:charset => 'utf-8'}
    %title= "MAdeK Admin"
    = stylesheet_link_tag "app_admin"
    %link{:href => "/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
    = javascript_include_tag "app_admin"
    = csrf_meta_tag
    = yield :head

  %body
    .container
      .navbar.navbar-inverse
        .navbar-header
          .navbar-brand
            Madek Admin
        %ul.nav.navbar-nav
          %li 
            =link_to app_admin_root_path do 
              %i.icon-dashboard
              Dashboard 
          %li
            =link_to edit_app_admin_settings_path do
              %i.icon-cog
              Settings
          %li.dropdown
            %a.dropdown-toggle{href: "#", data: {toggle: 'dropdown'}} 
              Files
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to app_admin_media_files_path do
                  %i.icon-file
                  Media Files
              %li
                = link_to app_admin_zencoder_jobs_path do
                  %i.icon-film
                  ZencoderJobs

          %li.dropdown
            %a.dropdown-toggle{href: "#", data: {toggle: 'dropdown'}} 
              Media Resources
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to app_admin_media_entries_path do
                  %i.icon-file
                  Media Entries
              %li
                = link_to app_admin_media_sets_path do
                  %i.icon-media-sets
                  Media Sets



          %li.dropdown
            %a.dropdown-toggle{href: "#", data: {toggle: 'dropdown'}} 
              %i.icon-user
              Users &amp; Groups
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to app_admin_groups_path do
                  Groups
                = link_to app_admin_people_path do
                  People 
                = link_to app_admin_users_path do
                  Users
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to root_path do
              %i.fa.fa-arrow-circle-left
              return to user-interface
              
      #messages
        - if flash[:success]
          .alert.alert-success.alertsucces
            %button.close{type:"button", 'data-dismiss'=>'alert'} &#215
            = flash[:success]
        - if flash[:notice]
          .alert.alert-notice.alertnotice
            %button.close{type:"button", 'data-dismiss'=>"alert"} &#215
            = flash[:notice]
        - if flash[:error]
          .alert.alert-error.alerterror 
            %button.close{type:"button", 'data-dismiss'=>"alert"} &#215
            = flash[:error]

      = yield
