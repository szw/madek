#teaser-set.ui-collage
  - 2.times do |row|
    .ui-collage-row
      - 5.times do |col|
        - i = (((row*5)+col) % @splashscreen_set.included_resources_accessible_by_user(current_user,:view).count )
        - mr = @splashscreen_set.included_resources_accessible_by_user(current_user,:view)[i]
        %a.ui-collage-item{:href => "/media_resources/#{mr.id}"}
          .ui-collage-item-wrapper
            .ui-collage-item-table
              .ui-collage-item-cell
                .ui-collage-item-inner
                  %img.ui-collage-item-image{:src => "/media_resources/#{mr.id}/image?size=large"} 
            .ui-collage-item-meta
              %h3.title-xs= mr.title
              %h4.title-xs-alt= mr.author
